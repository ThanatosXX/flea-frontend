/* pages/home/detail/detail.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.container1 scroll-view {
    height: 700rpx;
}
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 30rpx;
  color: black;
  text-align: justify;
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
.copyContact {
    margin-left: 22%;
    display: flex;
    width: 70%;
}
.copyContact text {
    width: 40%;
    display: flex;
}
.copyContactBox {
    margin-top: 20rpx;
    border: 1px solid black;
    border-radius: 8rpx;
    font-size: 16rpx;
    width: 120rpx;
    height: 30rpx;
    text-align: center;
    padding: 10rpx;
}
.copyContactBox text {
    width: 100%;
    font-size: 24rpx;
    line-height: 0;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #E6A23C; /* Green */
  width: 30%;
}
.button-red {
  background-color: #f44336; /* 红色 */
  width: 70%;
}
.button-grey {
    background-color: lightgrey; /* 灰色 */
    width: 30%;
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  /* width: 50%; */
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
