/* pages/my/my.wxss */

.head {
    width: 750rpx;
    height: 500rpx;
    background-color: #e6a23c;
    position: relative;
    padding-top: 80rpx;
}

.userAvatar {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 190rpx;
    height: 190rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0rpx auto;
    background-color: white;
    box-shadow: 0 1px 6px rgba(32, 33, 36, 0.28);
}

.userOption {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    box-shadow: 0 10rpx rgb(199, 141, 53);
    background-color: #eee;
    position: absolute;
}

.published {
    left: 40rpx;
    top: 267rpx;
}

.trading {
    left: 200rpx;
    top: 362rpx;
}

.sold {
    right: 205rpx;
    top: 362rpx;
}

.received {
    right: 40rpx;
    top: 267rpx;
}

.optionImg {
    width: 50%;
    height: 50%;
    position: absolute;
    left: 23%;
    top: 12%;
}

.optionText {
    position: absolute;
    left: 27%;
    top: 65%;
    width: 50%;
    height: 15%;
    font-size: 25rpx;
    color:black;

}

.userItem {
    width: 100%;
    height: 5vh;
    margin-top: 20rpx;
    position: relative;
}

.userItemImg {
    width: 100%;
    height: 100%;
}

.userAvatarImg {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.login-placeholder {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    padding: 0;
    font-size: 35rpx;
    color: #909399;
}
