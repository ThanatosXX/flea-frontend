page, view {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    overflow-y: auto;
}

.cards-container {
    display: flex;
    flex-direction: column;
    width: 95%;
    height: 100%;
    overflow-y:  auto;
}

.card-row:last-child {
    margin-bottom: 20px;
}

.card-row {
    display: flex;
    align-items: stretch;
    width: 100%;
    height: 230px;
    margin-top: 20px;
}

.card-col {
    display: flex;
    justify-content: center;
    align-items: stretch;
    width: 100%;
}

.card {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    width: 90%;
    background-color: #fff;
    box-shadow: 0 1px 6px rgba(32, 33, 36, 0.28);
    border-radius: 8px;
    border-bottom: 1px hidden #fff;
    overflow: hidden;
}

.goods-message{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: stretch;
    width: 70%;
}
.card-img {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 65;
    overflow: hidden;
}
.card-img>image{
    max-width: 100%;
    max-height: 100%;
}

.card-message {
    display: flex;
    flex-direction: column;
    flex: 20;
}

.goods-details {
    display: flex;
    flex-direction: column;
    height: 2.5em;
}

.goods-title {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    font-size: 16px;
    padding-left: 5px;
    text-align: center;
    margin-top: 10rpx;
}

.goods-title>view {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.goods-price {
    display: flex;
    width: 100%;
    padding-left: 10rpx;
    justify-content: flex;
    align-items: center;
    text-align: center;
    min-width: 4em;
    font-size: 28rpx;
    color: red;
}

.button-area{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: stretch;
    width: 30%;
    text-align: center;
}

.button1 .button2{
    width: 100%;
    text-align: center;
    align-items: center;
}

.button1 button {
    width: 160rpx;
    font-size: 20rpx;
    background-color: #e6a23c;
}

.button2 button {
    width: 160rpx;
    font-size: 20rpx;
    background-color: red;
}